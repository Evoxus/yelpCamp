<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <h1 class="text-center">Editing <%= campground.name %></h1>
            <div style="width: 30%; margin: 35px auto;">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label><strong>Campground Name</strong></label>
                        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <label><strong>Image URL</strong></label>
                        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <label><strong>Description</strong></label>
                        <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
                    </div>
                    <div class="form-group">
                        <label><strong>Price</strong></label>
                        <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>"min="0.00" step="0.01">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Edit Campground</button>
                    </div>
                </form>
                <a class="btn btn-danger btn-block" href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>