<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <h1 class="center-header">Create A New Campground</h1>
        </div>
        <div class="row">
            <div style="width: 30%; margin: 35px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label><strong>Campground Name</strong></label>
                        <input class="form-control" type="text" name="name">
                    </div>
                    <div class="form-group">
                        <label><strong>Image URL</strong></label>
                        <input class="form-control" type="text" name="image">
                    </div>
                    <div class="form-group">
                        <label><strong>Description</strong></label>
                        <input class="form-control" type="text" name="description">
                    </div>
                    <div class="form-group">
                        <label><strong>Price</strong></label>
                        <input class="form-control" type="number" name="price" min="0.00" step="0.01">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Add Campground</button>
                    </div>
                </form>
                <a class="btn btn-danger btn-block" href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>