<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <h1 class="center-header">Edit Comment</h1>
        </div>
        <div class="row">
            <div style="width: 30%; margin: 35px auto;">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label><strong>Comment</strong></label>
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Comment</button>
                    </div>
                </form>
                <a class="btn btn-danger btn-block" href="/campgrounds/<%= campground_id %>">Go Back</a>
            </div>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>