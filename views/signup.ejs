<% include partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div style="width: 50%; margin: 35px auto;">
                <h1 class="text-center">Sign Up</h1>
                
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <label for="signupUsername"><strong>Username</strong></label>
                        <input class="form-control" type="text" name="username" id="signupUsername">
                    </div>
                    <div class="form-group">
                        <label for="signupPassword"><strong>Password</strong></label>
                        <input class="form-control" type="password" name="password" id="signupPassword">
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary btn-block">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>    
</div>

<% include partials/footer %>